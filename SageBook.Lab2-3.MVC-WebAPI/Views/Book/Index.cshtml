@using SageBook.Lab2_3.MVC_WebAPI.Models.Book;
@using SageBook.Service.Models.Book;
@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" asp-action="Create">Create New Book</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-1"></th>
            <th class="col-3">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="col-8">@Html.DisplayNameFor(model => model.Description)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("", "Details", new { id=item.Id }, new { @class  = "bi bi-eye-fill me-1"})
                    @Html.ActionLink("", "Edit", new { id=item.Id}, new { @class  = "bi bi-pencil-square me-1"})
                    @Html.ActionLink("", "Delete", new { id=item.Id }, new { @class  = "bi bi-trash me-1"})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>
