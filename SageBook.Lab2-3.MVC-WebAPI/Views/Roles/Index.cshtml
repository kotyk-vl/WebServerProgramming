@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<h2>List of Roles</h2>
<table class="table">
    @foreach (var role in Model)
    {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
    }
</table>
<a class="btn btn-success" asp-action="Create">Add new role</a>
<a class="btn btn-primary" asp-action="UserList">List of users</a>